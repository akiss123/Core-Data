- (void)save {
    userDefaults = [NSUserDefaults standardUserDefaults];
    if (![userDefaults objectForKey:User_List_Key]) {
        [userDefaults setObject:@[] forKey:User_List_Key];
    }
    // NSUserDefaults 取出的对象是不可变的
    NSMutableArray *userList = [[userDefaults objectForKey:User_List_Key] mutableCopy];
    
    //用户信息字典
    NSMutableDictionary *userInfoDict = [NSMutableDictionary dictionary];
    
    for (int i = 0; i<6; i++) {
        NSString *key = array[i];
        NSString *value = [(UITextField *)[self.view viewWithTag:200+i] text];
        //NSDictionary 里面不能放入nil，否则会崩溃
        [userInfoDict setObject:value ? value : @"" forKey:key];
    }
    [userList addObject:userInfoDict];
    
    // 存储
    [userDefaults setObject:userList forKey:User_List_Key];
    [userDefaults synchronize];
}
